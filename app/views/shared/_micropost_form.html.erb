<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.date_field :date, placeholder: "Compose new micropost..." ,value: Date.today %>
  </div>
  
  
  
  <table class="table table-bordered">
    <thead style="text-align:center"><tr><th>内容</th><th>結果</th></tr></thead>
    <tr>
      <td><%= f.text_field :first, class: 'form-control' %></td>
      <td><input type="button" class="btn btn-sm btn-primary" value="達成" onchange=changeValue(this)></td>
    </tr>
    <tr>
      <td><%= f.text_field :second, class: 'form-control' %></td>
      <td><input type="button" class="btn btn-sm btn-primary" value="達成"></td>
    </tr>
    <tr>
      <td><%= f.text_field :thrid, class: 'form-control' %></td>
      <td><input type="button" class="btn btn-sm btn-primary" value="達成"></td>
    </tr>
  </table>
  
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>